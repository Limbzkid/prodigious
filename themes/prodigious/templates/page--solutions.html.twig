<section class="p-0">
  <div class="hero-banner" style="background-image: url({{ file_url(node.field_image.entity.uri.value) }});">
    <div class="hero-container">
      <div class="row no-gutters">
        <div class="col-lg-6 hero-caption">
          <h1 class="heading-2 font-light text-white align-self-center">{{ node.body.value | striptags('<br>') | raw }}</h1>
        </div>
      </div>
    </div>
    <ul class="social-icons">
      <li><a href="javascript:;" target="_blank" class="facebook"></a></li>
      <li><a href="javascript:;" target="_blank" class="twitter"></a></li>
      <li><a href="javascript:;" target="_blank" class="instagram"></a></li>
      <li><a href="javascript:;" target="_blank" class="youtube"></a></li>
    </ul>
  </div>
</section>
<section class="text-center text-md-left">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="solutions-details">
          {% for item in node.field_block %}
            {% set oddOrEven = cycle(['odd', 'even'], loop.index0) %}
            {% if oddOrEven == 'odd' %}
              <div class="row justify-content-between align-items-center">
                <div class="col-md-6 col-lg-5 py-5">
                  <h2 class="heading-2 font-bold mb-4">{{ item.entity.field_heading.value | raw }} </h2>
                  <p class="p20 font-medium  text-lightblack">{{ item.entity.field_content.value | raw }}</p>
                </div>
                <div class="col-md-6 col-lg-5 py-5">
                  <div class="box-shadow">
                      <img src="{{ file_url(item.entity.field_video_thumb.entity.uri.value) }}" alt="{{ item.entity.field_video_thumb.alt }}" title="{{ item.entity.field_video_thumb.title }}" class="img-fluid" />
                  </div>
                </div>
              </div>
            {% else %}
              <div class="row justify-content-between align-items-center">
                <div class="col-md-6 col-lg-5 py-5 order-md-2">
                  <h2 class="heading-2 font-bold mb-4">{{ item.entity.field_heading.value | raw }}</h2>
                  <p class="p20 font-medium  text-lightblack">{{ item.entity.field_content.value | raw }}</p>
                </div>
                <div class="col-md-6 col-lg-5 py-5 order-md-1">
                  <div class="box-shadow">
                    <img src="{{ file_url(item.entity.field_video_thumb.entity.uri.value) }}" alt="{{ item.entity.field_video_thumb.alt }}" title="{{ item.entity.field_video_thumb.title }}"class="img-fluid" />
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
