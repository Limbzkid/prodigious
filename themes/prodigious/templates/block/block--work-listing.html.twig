{% for item in content['#data_obj'] %}
  <div class="col-xl-4 col-md-6">
    <div class="product-card">
      <div class="top-img">
        <img src="{{ item.image }}" class="img-fluid grayscale" alt="{{ item.alt }}" title="{{ item.title }}"/>
        <a href="{{ item.url }}" class="plus-icon"><img src="{{ directory }}/images/icons/plus-icon.png" alt="plus" title="plus"></a>
      </div>
      <div class="bottom-text">
        <h3 class="heading-3 text-uppercase text-lightblack">{{ item.name | upper }} </h3>
        <div class="animate-div">
          <p class="p20 text-lightgrey">{{ item.brand }}</p>
          <div class="category font-light text-white">
            {% for cat in item['category'] %}
              <span class="circletext text-{{ cat.color }}">{{ cat.name | upper }}</span>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
